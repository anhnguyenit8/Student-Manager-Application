@model AppDev_Na.ViewModels.CourseViewModel

@{
    var title = "Course Category";
    Layout = "_Layout";
}

<form method="post" asp-controller="Courses" asp-action="Upsert">
    <div class="row p-3 border">
        @if (Model.Course.Id != 0)
        {
            title = "Edit Course";
            <input asp-for="Course.Id" hidden>  
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <input type="hidden" asp-for="Course.Id"/>
            <div class="form-group row">
                <div class="Col-4">
                    <label asp-for="Course.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Course.Name" class="form-control"/>
                    <span asp-validation-for="Course.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="Col-4">
                    <label asp-for="Course.Description"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Course.Description" class="form-control"/>
                    <span asp-validation-for="Course.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    Category
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(n => n.Course.CategoryId, Model.Categories, "Select a Category",new {@class= "form-control"})
                    <span asp-validation-for="Course.CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Course.Id != 0)
                    {
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Course.Id">Update</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-primary form-control">Back To List</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-primary form-control">Back To List</a>
                            </div>
                        </div>
                        
                    }
                </div>
            </div>
        </div>
    </div>
</form>