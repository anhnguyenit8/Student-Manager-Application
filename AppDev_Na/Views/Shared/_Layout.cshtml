@using AppDev_Na.Utility.Enum
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AppDev_Na</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Trainning Portal</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.IsInRole(Constant.Role_Admin))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="Users" asp-action="Index">User Profile</a>
                        </li>
                    }
                    @if (User.IsInRole(Constant.Role_Staff))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="Users" asp-action="Index">User Profile</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Menu
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="Authenticated" asp-controller="Categories" asp-action="Index">Categories</a>
                                <a class="dropdown-item" asp-area="Authenticated" asp-controller="Courses" asp-action="Index">Courses</a>
                                <a class="dropdown-item" asp-area="Authenticated" asp-controller="Assignments" asp-action="Index">Assignments</a>
                                <a class="dropdown-item" asp-area="Authenticated" asp-controller="Enrollments" asp-action="Index">Enrollments</a>

                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="OverView" asp-action="Index">Overview</a>
                        </li>
                    }
                    @if (User.IsInRole(Constant.Role_Trainer))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="Trainer" asp-action="Index">Courses</a>
                        </li>
                    }
                    @if (User.IsInRole(Constant.Role_Trainee))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="Trainee" asp-action="Index">Courses</a>
                        </li>
                    }

                </ul>

                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - Designer by Nhat Anh - GCD191020 <a asp-area="" asp-controller="Home" asp-action="Privacy"></a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>